<?xml version="1.0" 
    encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ToRead.Pages.RegisterPage"            
             BindingContext="{Binding RegisterPageViewModel, Source={StaticResource ServiceLocator}}"
             Title="RegisterPage">
    <VerticalStackLayout>
        <Entry Placeholder="Email" Text="{Binding Email}" />
        <Entry Placeholder="Password" IsPassword="True" Text="{Binding Password}" />
        <Entry Placeholder="ConfirmPassword" IsPassword="True" Text="{Binding ConfirmPassword}" />
        <Button
            Text="注册"
            x:Name="RegisterButton"
            VerticalOptions="Center"
            HorizontalOptions="Center"
            Clicked="RegisterButton_OnClicked"/>
    </VerticalStackLayout>
</ContentPage>