<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:conoverters="clr-namespace:ToRead.Conoverters"
             x:Class="ToRead.DetailPage.RecommendDetailPage"
             Title="推荐详情页">
    <ContentPage.Resources>
        <conoverters:TextIndentConverter x:Key="Indent" />
    </ContentPage.Resources>

    <ScrollView>
        <StackLayout Padding="8">
            <Label FontSize="18"
                   Margin="0,0,0,8"
                   HorizontalTextAlignment="Center"
                   Text="{Binding TodayPoetry.Name}" />
            <StackLayout Orientation="Horizontal"
                         HorizontalOptions="Center"
                         Margin="0,0,0,8">
                <Label FontSize="12"
                       Text="{Binding TodayPoetry.Dynasty}" />
                <Label FontSize="12"
                       Text="·" />
                <Label FontSize="12"
                       Text="{Binding TodayPoetry.Author}" />
            </StackLayout>
            <Label FontSize="18"
                   Margin="0,0,0,8"
                   Text="{Binding TodayPoetry.Content, Converter={StaticResource Indent}}" />
            <Button HorizontalOptions="Center"
                    Text="在本地数据库中查找"
                    Command="{Binding QueryCommand}" />
        </StackLayout>
    </ScrollView>
</ContentPage>